{
  "compilerOptions": {
    "target": "es2016",                                  
    "lib": ["dom", "ESNext"],                       
    "jsx": "preserve",                              
    "module": "ESNext",  
    "moduleResolution": "bundler",
    "types": ["vite/client", "vitest/globals", "@testing-library/jest-dom"],                                      
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true                                
  },
  "include": ["src", "vite.config.ts"],
  "exclude": ["node_modules", ".history/**"],
}
